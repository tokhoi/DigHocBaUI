@page "/sdb-ke-hoach-giang-day"
@rendermode InteractiveServer

<div class="page-wrapper animate-fade-in">
    <div class="top-header">
        <div>
            <h2 class="page-heading"> Kế Hoạch Giảng Dạy </h2>
            <div class="breadcrumb">
                <span class="back-link">Sổ đầu bài</span> / <span class="current-class">Phân phối chương trình</span>
            </div>
        </div>
        <div class="header-controls">
            <button class="btn-settings primary" @onclick="OpenModal">
                <i class="bi bi-cloud-upload"></i> Tải lên kế hoạch
            </button>
        </div>
    </div>

    <div class="grid-panel">
        <div class="tabs-header">
            <div class="tab-item @(activeTab == 1 ? "active" : "")" @onclick="() => activeTab = 1">
                Kế hoạch Cá nhân
            </div>
            <div class="tab-item @(activeTab == 2 ? "active" : "")" @onclick="() => activeTab = 2">
                Kế hoạch Tổ bộ môn
            </div>
        </div>

        <div class="table-responsive">
            <table class="vnedu-table">
                <thead>
                    <tr class="header-blue">
                        <th class="text-center" width="50">STT</th>
                        <th>Tiêu đề kế hoạch</th>
                        <th>Môn học / Khối</th>
                        <th>Học kỳ</th>
                        <th>Người đăng</th>
                        <th class="text-center">Ngày đăng</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in PagedList)
                    {
                        <tr>
                            <td class="text-center">@item.Id</td>
                            <td class="font-bold text-primary">@item.Title</td>
                            <td><span class="tag-badge warning">@item.Subject - K.@item.Grade</span></td>
                            <td>@item.Semester</td>
                            <td>@item.Author</td>
                            <td class="text-center">@item.Date.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                @if(item.IsApproved) { <span class="status-badge success">Đã duyệt</span> }
                                else { <span class="status-badge warning">Chờ duyệt</span> }
                            </td>
                            <td class="text-center">
                                <button class="btn-icon">👁️</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="pagination-container">
            <div class="pagination-info">Trang @currentPage / @TotalPages</div>
            <div class="pagination-buttons">
                <button class="page-btn" disabled="@(currentPage == 1)" @onclick="() => currentPage--">‹</button>
                <button class="page-btn" disabled="@(currentPage == TotalPages)" @onclick="() => currentPage++">›</button>
            </div>
        </div>
    </div>

    @if (IsShowModal)
    {
        <div class="modal-overlay">
            <div class="modal-card animate-scale-in">
                <div class="modal-header">
                    <h3 class="modal-title">Tải lên Kế hoạch</h3>
                    <button class="btn-close-modal" @onclick="CloseModal">×</button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group half-width">
                            <label class="form-label">Loại kế hoạch</label>
                            <select class="custom-input"><option>Cá nhân</option><option>Tổ bộ môn</option></select>
                        </div>
                        <div class="form-group half-width">
                            <label class="form-label">Học kỳ</label>
                            <select class="custom-input"><option>Học kỳ I</option><option>Học kỳ II</option></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Tiêu đề</label>
                        <input type="text" class="custom-input" placeholder="VD: PPCT Toán 10 - Năm học 2023-2024" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">File đính kèm</label>
                        <div class="upload-area">
                            <i class="bi bi-cloud-arrow-up" style="font-size: 2rem; color: #64748b;"></i>
                            <p style="margin: 5px 0; color: #64748b; font-size: 13px;">Kéo thả file hoặc click để chọn</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn-modal-cancel" @onclick="CloseModal">Hủy</button>
                    <button class="btn-modal-save" @onclick="CloseModal">Tải lên</button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private int activeTab = 1;
    private bool IsShowModal = false;
    private int currentPage = 1;
    private int pageSize = 8;

    public class PlanItem { public int Id; public string Title; public string Subject; public string Grade; public string Semester; public string Author; public DateTime Date; public bool IsApproved; }
    private List<PlanItem> AllItems = new List<PlanItem>();

    protected override void OnInitialized() {
        for(int i=1; i<=12; i++) {
            AllItems.Add(new PlanItem { 
                Id = i, Title = $"PPCT Toán 10 - Tuần {i}", Subject = "Toán", Grade = "10", Semester = "HK1", Author = "Nguyễn Văn A", Date = DateTime.Now.AddDays(-i), IsApproved = i%3!=0 
            });
        }
    }

    private List<PlanItem> PagedList => AllItems.Skip((currentPage-1)*pageSize).Take(pageSize).ToList();
    private int TotalPages => (int)Math.Ceiling((double)AllItems.Count / pageSize);
    private void OpenModal() => IsShowModal = true;
    private void CloseModal() => IsShowModal = false;
}